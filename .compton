# General
backend = "glx";
vsync = "opengl-swc";
detect-rounded-corners = true;
xrender-sync = true;
xrender-sync-fence = true;

# Shadow
shadow = true;
no-dnd-shadow = true;
no-dock-shadow = true;
clear-shadow = true;
shadow-opacity = 0.4;
shadow-radius = 2;
shadow-offset-x = -4;
shadow-offset-y = -4;
shadow-exclude = [
    "! name~=''",
    "name = 'Notification'",
    "name *= 'Chrome'",
    "name *= 'Firefox'",
    "class_g = 'Conky'",
	"_NET_WM_NAME@:s = 'rofi'"
];

# Opacity
inactive-dim = 0.08;
inactive-dim-fixed = true;
#blur-background-fixed = true;
#blur-background-exclude = [ ];
focus-exclude = [ 
	 "_NET_WM_NAME@:s = 'rofi'" 
];
opacity-rule = [
    "80:class_g = 'i3bar' && window_type = 'dock'"
];

# Fading
fading = true;
fade-delta = 2;
fade-in-step = 0.02;
fade-out-step = 0.02;
fade-exclude = [ ];

#mark-wmwin-focused = true;
#mark-ovredir-focused = true;
#use-ewmh-activte-win = true;
#detect-client-opacity = true;
#refresh-rate = 0;
#dbe = false;
#paint-on-overlay = true;
#glx-copy-from-front = true;

# GLX backend
#glx-no-stencil = true;
#glx-use-copysubbuffermesa = true;
#glx-no-rebind-pixmap = true;
#glx-swap-method = 1; 

# Window type settings
wintypes:
{
  tooltip = { fade = true; shadow = false; opacity = 0.85; focus = true; };
  dock = { opacity = 0.2; shadow = false; };
};

