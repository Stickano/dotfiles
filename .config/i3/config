# # # # # # # # # # # # #
# General Settings
#
# Font
font pango:EnvyCodeR 12

# Remove Borders
new_window pixel 0 

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Back and forth in workspaces, hitting $mod+4 twice etc.
workspace_auto_back_and_forth yes

# Super-key as $mod
set $mod Mod4

# Don't autofocus windows 
focus_on_window_activation none


# # # # # # # # # # # # #
# Workspace Settings
#
# Workspace names
set $WS1 "1: www"
set $WS2 "2: term"
set $WS3 "3: devel"
set $WS4 "4: media"
set $WS5 "5: misc"
set $WS6 "6: VI"
set $WS7 "7: VII"
set $WS8 "8: VIII"
set $WS9 "9: IX"
set $WS10 "10: X"

# Assign applications to specific workspaces
assign [class="Deadbeef"] $WS4
assign [class="MPlayer"] $WS4
assign [class="Pavucontrol"] $WS4
assign [class="XTerm" instance="tws1"] $WS2
assign [class="XTerm" instance="tws2"] $WS2
assign [class="XTerm" instance="tws3"] $WS2
assign [class="Subl3"] $WS3
assign [class="KeePass2"] $WS5


# # # # # # # # # # # # #
# Container Settings
#
# Floating windows
for_window [class="MPlayer"] floating enable
for_window [window_role="Organizer"] floating enable	# Firefox bookmarks
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Auto focus
no_focus [class="KeePass2"]
no_focus [class="Deadbeef"]
no_focus [class="Pavucontrol"]
no_focus [class="Subl3"]
no_focus [class="Zim"]

# Force no border (...jees Zim? Really?!) 
for_window [class="Zim"] border pixel 0


# # # # # # # # # # # # #
# Autostart
#
# Layouts
exec --no-startup-id i3-msg "workspace $WS2; append_layout /home/stick/.config/i3/layouts/workspace-2.json"
exec --no-startup-id i3-msg "workspace $WS4; append_layout /home/stick/.config/i3/layouts/workspace-4.json"
exec --no-startup-id i3-msg "workspace $WS5; append_layout /home/stick/.config/i3/layouts/workspace-5.json"

# Applications
exec --no-startup-id "xterm -hold -name tws1 -e 'dmesg; zsh'"
exec --no-startup-id "xterm -hold -name tws3 -e 'cd /home/stick/dotfiles; git status; cd /home/stick; zsh'"
exec --no-startup-id "xterm -hold -name tws2 -e 'ls -l --color=auto --group-directories-first; zsh'"
exec --no-startup-id i3-msg "workspace $WS1; exec firefox -no-remote"
exec --no-startup-id i3-msg "workspace $WS3; exec firefox -no-remote -p \"local\" localhost/adminer"
exec --no-startup-id "deadbeef"
exec --no-startup-id "pavucontrol"
exec --no-startup-id "subl3"
exec --no-startup-id "keepass"
exec --no-startup-id i3-msg "workspace $WS5; exec zim"


# # # # # # # # # # # # #
# Key Binds
#
# next/previous workspace
bindsym Mod1+Tab focus right
bindsym Mod1+Shift+Tab focus left
bindsym $mod+Tab workspace back_and_forth

# scratchpad
bindsym $mod+m move scratchpad
bindsym $mod+o scratchpad show

# kill focused window
bindsym $mod+Shift+q kill

# Drag a window along back and forth in workspaces with $mod+z
bindsym $mod+Shift+z move container to workspace back_and_forth; workspace back_and_forth

# Firefox 
bindsym Mod1+w [class="Firefox"] focus

# Terminal
bindsym $mod+Return exec xterm

# Dmenu 
bindsym Mod1+d exec rofi -show drun -lines 5 -eh 2 -font "EnvyCodeR Display 16" -opacity 90 

# change focus
bindsym $mod+j focus left
bindsym $mod+ae focus down
bindsym $mod+l focus up
bindsym $mod+k focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+ae move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Lock-screen with Alt+l
bindsym $mod1+l exec ~/.config/i3/lock.sh

# switch to workspace
bindsym $mod+1 workspace $WS1
bindsym $mod+2 workspace $WS2
bindsym $mod+3 workspace $WS3
bindsym $mod+4 workspace $WS4
bindsym $mod+5 workspace $WS5
bindsym $mod+6 workspace $WS6
bindsym $mod+7 workspace $WS7
bindsym $mod+8 workspace $WS8
bindsym $mod+9 workspace $WS9
bindsym $mod+0 workspace $WS10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $WS1
bindsym $mod+Shift+2 move container to workspace $WS2
bindsym $mod+Shift+3 move container to workspace $WS3
bindsym $mod+Shift+4 move container to workspace $WS4
bindsym $mod+Shift+5 move container to workspace $WS5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Shutdown options
set $Locker i3lock && sleep 1
set $mode_system (l) lock, (e) logout, (r) reboot, (s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"  
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

# resize window
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym ae resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# HDMI
set $mode_display (h) HDMI ON, (x) HDMI OFF, (b) BT ON, (o) BT OFF
mode "$mode_display" {
    bindsym h exec --no-startup-id xrandr --output HDMI1 --auto --right-of LVDS1, mode "default"
    bindsym x exec --no-startup-id xrandr --output HDMI1 --auto --off, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_display"


# # # # # # # # # # # # #
# Status Bar
#
# Caps-lock indicator 
bindsym --release Caps_Lock exec pkill -SIGRTMIN+11 i3blocks

# Color scheme
set $bg-color 	         #1d1f21
set $inactive-bg-color   #1d1f21
set $text-color          #f5f5f5
set $inactive-text-color #d0d0d0
set $urgent-bg-color	 #ac4142

#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $urgent-bg-color		$urgent-bg-color
client.unfocused        $iancative-bg-color $inactive-bg-color $inactive-text-color $urgent-bg-color
client.focused_inactive $iancative-bg-color $inactive-bg-color $inactive-text-color $urgent-bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $urgent-bg-color

# Start i3bar 
bar { 
    status_command i3blocks -c ~/.config/i3/i3status 
	position top
	mode hide
	modifier $mod
    strip_workspace_numbers yes 
	colors {
		background $bg-color
	    separator #757575
		#                  border             background         text
		focused_workspace  $bg-color          #505050			 $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}
